{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug (OSPanel)",
            "type": "php",
            "request": "launch",
            "port": 9003, // Убедитесь, что этот порт соответствует xdebug.client_port в вашем php.ini OSPanel
            "pathMappings": {
                // Это важно, если пути к файлам в VS Code отличаются от того, как их видит веб-сервер OSPanel.
                // Например, если ваш проект лежит в C:\OSPanel\domains\myproject\public_html,
                // а в VS Code вы открываете его как C:\Users\YourUser\Documents\myproject.
                // В большинстве случаев для OSPanel (если проект открыт из папки domains) это не нужно,
                // но если возникают проблемы, раскомментируйте и настройте.
                // "/path/on/server/to/your/document/root": "${workspaceFolder}"
                // Пример для OSPanel:
                // "C:/OSPanel/domains/mysite.loc": "${workspaceFolder}"
            }
        }
        // Можете удалить остальные конфигурации, если они вам не нужны для других сценариев.
        // Если вы планируете запускать скрипты напрямую из VS Code, то Launch currently open script
        // может быть полезен, но убедитесь, что его порт также 9003 и нет runtimeArgs для Xdebug,
        // так как он должен использовать глобальные настройки Xdebug из php.ini.
    ]
}